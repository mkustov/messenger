<%= simple_form_for @message, url: '#' do |f| %>
  <p class="emoji-picker-container">
  <%= f.input :text, label: false, input_html: { data: { emojiable: true } } %>
  <%= f.input :user, as: :hidden, input_html: { value: session['username'] } %>
  <%= f.input :dialect, as: :hidden, input_html: { value: session['dialect'] } %>
  <%= f.submit 'Send' %>
<% end %>
